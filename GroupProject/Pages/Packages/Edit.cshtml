@page
@model GroupProject.Pages.Packages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Package</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Package.ID" />
            <div class="form-group">
                <label asp-for="Package.Name" class="control-label"></label>
                <input asp-for="Package.Name" class="form-control" />
                <span asp-validation-for="Package.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Cap" class="control-label"></label>
                <input asp-for="Package.Cap" class="form-control" />
                <span asp-validation-for="Package.Cap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.ConnectionID" class="control-label"></label>
                <select asp-for="Package.ConnectionID" class="form-control" asp-items="ViewBag.ConnectionID"></select>
                <span asp-validation-for="Package.ConnectionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
